<Window x:Name="theWindow" x:Class="RG39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RG39.Lang"
        mc:Ignorable="d"
        SizeToContent="Manual" 
        ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="500"
        Title="RG39">

    <Grid>
        <Button x:Name="run_BTN" Content="{x:Static p:strings.RUN_BTN}" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="32" FontWeight="Bold" Click="Run_Click" Cursor="Hand"/>
        <TabControl Cursor="Arrow" Margin="0,70,0,0">
            <TabItem x:Name="gameListTAB" Header="Games" Cursor="Hand">
                <Grid Cursor="Arrow">
                    <ListView x:Name="gamesList" Margin="10,10,10,50" Cursor="Arrow" d:ItemsSource="{d:SampleData ItemCount=30}" VerticalAlignment="Top">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="active" IsChecked="{Binding Active}" Cursor="Hand"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn x:Name="filename" Header="File name" DisplayMemberBinding="{Binding FileName}" Width="auto"/>
                                <GridViewColumn x:Name="type" Header="Type" DisplayMemberBinding="{Binding Type}" Width="auto"/>
                                <GridViewColumn x:Name="from" Header="From" DisplayMemberBinding="{Binding From}" Width="auto"/>
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="X" FontSize="8"  Height="16" Width="16" Cursor="Hand" Click="RemoveItemFromList_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="settingsTAB" Header="Settings" Cursor="Hand">
                <Grid Cursor="Arrow" VerticalAlignment="Stretch">
                    <Button Content="Add game to list" Height="40" Cursor="Hand" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left" Margin="10,10,0,0" Click="AddGameToList_Click"/>
                    <Button Content="Clear list (others)" Height="40" Cursor="Hand" VerticalAlignment="Top" Margin="165,10,0,0" Width="150" HorizontalAlignment="Left" Click="ClearList_Click"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Steam instalado en: " VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="10,0,0,10"/>
        <Label x:Name="steamExe" VerticalAlignment="Bottom" FontSize="14" Margin="149,0,45,10"/>
        <Button Content="[...]" Height="30" Width="30" Cursor="Hand" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" Click="LocateSteam_Click"/>
    </Grid>
</Window>
