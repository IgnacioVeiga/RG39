<Window x:Name="theWindow" x:Class="RG39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RG39.Lang"
        xmlns:properties="clr-namespace:RG39.Properties"
        mc:Ignorable="d"
        SizeToContent="Width" 
        ResizeMode="CanResizeWithGrip"
        MinHeight="400" MinWidth="540"
        Height="400" Width="540"
        Title="RG39">

    <Grid>
        <Button x:Name="start_BTN" Content="{x:Static p:Strings.START_BTN}" Margin="10,10,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" FontSize="32" FontWeight="Bold" Click="Start_Click" Cursor="Hand"/>
        <Button x:Name="toggleVisibilityGeneralBTN" Content="˄" Margin="10,70,10,10" VerticalAlignment="Top" HorizontalAlignment="Stretch" Click="ToggleVisibilityGeneral_Click" Cursor="Arrow"/>

        <Grid x:Name="general" Margin="0,100,0,0">
            <TabControl Cursor="Arrow" HorizontalAlignment="Stretch">
                <TabItem Header="{x:Static p:Strings.GAMES_TAB}" Cursor="Arrow">
                    <Grid Cursor="Arrow">
                        <ListView x:Name="gamesList" Margin="10,10,10,10" Cursor="Arrow" d:ItemsSource="{d:SampleData ItemCount=30}" VerticalAlignment="Top" SelectionMode="Single">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Width="32">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox x:Name="active" IsChecked="{Binding Active}" Cursor="Hand"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="32">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Image x:Name="appIcon" Source="{Binding AppIcon}"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="folder" Header="{x:Static p:Strings.FOLDER_COL}" DisplayMemberBinding="{Binding Folder}" Width="100"/>
                                    <GridViewColumn x:Name="name" Header="{x:Static p:Strings.NAME_COL}" DisplayMemberBinding="{Binding Name}" Width="120"/>
                                    <GridViewColumn x:Name="type" Header="{x:Static p:Strings.TYPE_COL}" DisplayMemberBinding="{Binding Type}" Width="50"/>
                                    <GridViewColumn x:Name="from" Header="{x:Static p:Strings.FROM_COL}" DisplayMemberBinding="{Binding From}" Width="70"/>
                                    <GridViewColumn Width="30">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="X" FontSize="8"  Height="16" Width="16" Cursor="Hand" Click="RemoveItemFromList_Click"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn Width="30">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="▶" FontSize="8"  Height="16" Width="16" Cursor="Hand" Click="StartItemFromList_Click"/>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static p:Strings.SETTINGS_TAB}" Cursor="Arrow">
                    <Grid Cursor="Arrow" VerticalAlignment="Stretch">
                        <Button Content="{x:Static p:Strings.ADD_GAME_BTN}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="AddGameToList_Click"/>
                        <Button Content="{x:Static p:Strings.CLEAR_LIST_BTN}" HorizontalAlignment="Left" Margin="120,10,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="ClearList_Click"/>

                        <ComboBox x:Name="langSelected" HorizontalAlignment="Left" Margin="230,10,0,0" VerticalAlignment="Top" Height="30" Width="100"
                                  SelectionChanged="ComboBox_SelectionChanged"
                                  SelectedIndex="{Binding Source={x:Static properties:Settings.Default}, Path=LangIndex}">
                                    <ComboBoxItem Content="English"/>
                                    <ComboBoxItem Content="Español"/>
                        </ComboBox>

                        <!--https://weblogs.asp.net/thomaslebrun/wpf-how-to-bind-a-control-to-a-property-defined-in-the-settings-->
                        <Image x:Name="egsIcon" Width="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,50"/>
                        <Label VerticalAlignment="Bottom" FontSize="14" Margin="50,0,10,50" Content="{Binding Source={x:Static properties:Settings.Default}, Path=EGSPath}"/>

                        <Image x:Name="steamIcon" Width="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10"/>
                        <Label VerticalAlignment="Bottom" FontSize="14" Margin="50,0,10,10" Content="{Binding Source={x:Static properties:Settings.Default}, Path=SteamPath}"/>
                    </Grid>
                </TabItem>
                <TabItem Header="{x:Static p:Strings.ABOUT_TAB}" Cursor="Arrow" Visibility="Hidden">
                    <Grid Cursor="Arrow" VerticalAlignment="Stretch">
                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,24,0,0" TextWrapping="Wrap"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
