<Window x:Name="theWindow" x:Class="RG39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p = "clr-namespace:RG39.Lang"
        mc:Ignorable="d"
        SizeToContent="Manual" 
        ResizeMode="CanResizeWithGrip"
        MinHeight="560" MinWidth="800"
        Title="RG39">

    <Grid>
        <TabControl Cursor="Arrow">
            <TabItem x:Name="MainTAB" Header="Inicio" Cursor="Hand">
                <Button Content="{x:Static p:strings.RUN_BTN}" Margin="0,0,0,50" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="36" FontWeight="Bold" Click="Run_Click" Cursor="Hand"/>
            </TabItem>
            <TabItem x:Name="gameListTAB" Header="Games" Cursor="Hand">
                <Grid Cursor="Arrow">
                    <ListView x:Name="gamesList" Margin="5,25,5,50" Cursor="Arrow" d:ItemsSource="{d:SampleData ItemCount=30}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="30">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="active" IsChecked="{Binding Active}" Cursor="Hand"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn x:Name="filename" Header="File name" DisplayMemberBinding="{Binding FileName}"/>
                                <GridViewColumn x:Name="type" Header="Type" DisplayMemberBinding="{Binding Type}"/>
                                <GridViewColumn x:Name="from" Header="From" DisplayMemberBinding="{Binding From}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem x:Name="settingsTAB" Header="Settings" Cursor="Hand">
                <Grid Cursor="Arrow">
                    <Button Content="Add game to list" Height="40" Cursor="Hand" VerticalAlignment="Top" Width="150" HorizontalAlignment="Left" Margin="10,10,0,0" Click="AddGameToList_Click"/>
                    <Button Content="Delete list" Height="40" Cursor="Hand" VerticalAlignment="Top" Margin="165,10,0,0" Width="150" HorizontalAlignment="Left" Click="DeleteList_Click"/>
                    <Button Content="Locate Steam.exe" Height="40" Cursor="Hand" VerticalAlignment="Top" Margin="320,10,0,0" Width="150" HorizontalAlignment="Left"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Steam instalado en: " VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="10,0,0,10"/>
        <Label x:Name="steamExe" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="14" Margin="140,0,0,10"/>
    </Grid>
</Window>
