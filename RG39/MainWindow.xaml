<Window x:Name="theWindow" x:Class="RG39.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight" 
        ResizeMode="CanResizeWithGrip"
        MinHeight="250" MinWidth="450"
        Title="RG39" Width="450">
    <Grid Background="Black">
        <TabControl x:Name="pestañas" BorderBrush="Green" Background="Black" Cursor="Arrow">
            <TabItem x:Name="pInicio" Header="Inicio" Cursor="Hand" RenderTransformOrigin="0.5,0.5">
                <TabItem.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TabItem.RenderTransform>
                <Grid Background="Black" VerticalAlignment="Top" Height="170">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="ejecutar" Content="INICIAR" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Click="ejecutar_Click" Height="140" Cursor="Hand" Foreground="White" BorderBrush="Green">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <RadialGradientBrush>
                                            <GradientStop Color="Black" Offset="0.5"/>
                                            <GradientStop Color="Green" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type Button}">
                                            <Border Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <RadialGradientBrush>
                                                    <GradientStop Color="Black" Offset="1"/>
                                                    <GradientStop Color="Green" Offset="0.5"/>
                                                </RadialGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <CheckBox x:Name="preguntar" Content="Preguntar antes de ejecutar" HorizontalAlignment="Stretch" FontSize="14" Background="White" Foreground="White" FontWeight="Normal" FontStyle="Normal" Cursor="Hand" Margin="0,145,0,0"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="pLista" Header="Lista" Cursor="Hand">
                <Grid Background="Black" Cursor="Arrow">
                    <Label x:Name="programasDisponibles" Content="Programas disponibles" HorizontalAlignment="Stretch" Foreground="White" VerticalAlignment="Top"/>
                    <Grid VerticalAlignment="Center">
                        <ListView x:Name="listaProgramas" VerticalAlignment="Stretch" Margin="5,25,5,25" Cursor="Arrow" Background="#3F008000" BorderBrush="Green" Foreground="White">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Activo">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox x:Name="activo" IsChecked="{Binding Activo}" Cursor="Hand" Click="activo_Click" />
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                    <GridViewColumn x:Name="nombre" Header="Nombre" DisplayMemberBinding="{Binding NombreArchivo}"/>
                                    <GridViewColumn x:Name="formato" Header="Formato" DisplayMemberBinding="{Binding Formato}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem x:Name="pAjustes" Header="Ajustes" Cursor="Hand">
                <Grid Background="Black" Cursor="Arrow">
                    <Button x:Name="cambiarRuta" Content="Cambiar ruta" HorizontalAlignment="Stretch" VerticalAlignment="Top" Click="cambiarRuta_Click" Height="30" Cursor="Hand"/>
                    <Button x:Name="refrescar" Content="Refrescar ruta y lista" VerticalAlignment="Top" Margin="0,40,0,0" Click="refrescar_Click_1" Height="30" Cursor="Hand"/>
                    <Button x:Name="guardarConfig" Content="Guardar configuración" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0,0,20" Height="30" Cursor="Hand" Click="guardarConfig_Click"/>
                    <Button x:Name="borrarConfig" Content="Borrar configuración" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30" Margin="0,0,0,60" Cursor="Hand" Click="borrarConfig_Click_1"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label x:Name="rutaCargada" Content="Ruta cargada: " Foreground="White" FontStyle="Normal" FontWeight="Normal" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
