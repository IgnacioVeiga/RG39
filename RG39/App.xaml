<Application
    x:Class="RG39.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <SolidColorBrush x:Key="SteamBackground" Color="#24282F" />
                    <SolidColorBrush x:Key="SteamForeground" Color="#E4EAF3" />
                </ResourceDictionary>

                <ResourceDictionary Source="./Assets/MergedDictionaries/Checkbox.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/DataGrid.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/Menu.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/PlayGameButton.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/RemoveButton.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/ScrollBar.xaml" />
                <ResourceDictionary Source="./Assets/MergedDictionaries/StatusBar.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
